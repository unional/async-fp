{
  "name": "async-fp",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "license": "MIT",
  "scripts": {
    "async-context": "pnpm --filter=@unional/async-context",
    "async-fp": "pnpm --filter=async-fp",
    "build": "turbo run build",
    "build:watch": "tsc -b -w",
    "clean": "turbo run clean",
    "coverage": "jest --coverage --maxWorkers=60%",
    "cs": "changeset",
    "depcheck": "turbo run depcheck",
		"gizmo": "pnpm --filter=@unional/gizmo",
    "lint": "turbo run lint",
    "nuke": "pnpm clean && turbo run nuke && rimraf node_modules",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "postinstall": "husky install",
    "release": "pnpm publish -r && changeset tag",
    "size": "turbo run size",
    "test": "jest --maxWorkers=60%",
    "test:watch": "jest --watch --maxWorkers=60%",
    "verify": "turbo run lint build coverage depcheck size",
    "version": "changeset version",
    "watch": "pnpm test:watch"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.18.10",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.18.6",
    "@babel/plugin-proposal-optional-chaining": "^7.18.9",
    "@babel/preset-env": "^7.18.10",
    "@babel/preset-typescript": "^7.18.6",
    "@changesets/cli": "^2.26.0",
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@types/jest": "^29.0.0",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "assertron": "^11.0.0",
    "babel-jest": "^29.0.0",
    "dependency-check": "^4.1.0",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-harmony": "^7.1.2",
    "husky": "^8.0.1",
    "jest": "^29.4.3",
    "jest-junit": "^15.0.0",
    "jest-validate": "^29.4.3",
    "jest-watch-exec": "^1.4.1",
    "jest-watch-repeat": "^2.0.0",
    "jest-watch-suspend": "^1.1.2",
    "jest-watch-toggle-config-2": "^2.1.0",
    "jest-watch-typeahead": "^2.2.2",
    "npm-check-updates": "^16.0.5",
    "pinst": "^3.0.0",
    "rimraf": "^5.0.0",
    "turbo": "^1.4.3",
    "typescript": "^5.0.0"
  },
  "packageManager": "pnpm@8.2.0"
}
