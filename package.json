{
  "name": "async-fp",
  "version": "0.0.0-development",
  "description": "Async Context for functional programming style",
  "homepage": "https://github.com/unional/async-fp",
  "bugs": {
    "url": "https://github.com/unional/async-fp/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/unional/async-fp.git"
  },
  "license": "MIT",
  "author": {
    "name": "Homa Wong (unional)",
    "email": "homawong@gmail.com"
  },
  "files": [
    "lib",
    "libm",
    "src"
  ],
  "main": "lib/index.js",
  "module": "libm/index.js",
  "jsnext:main": "libm/index.js",
  "typings": "libm/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.es5.json && tsc -p tsconfig.esnext.json",
    "clean": "rimraf lib libm *.tsbuildinfo",
    "codacy": "cat coverage/lcov.info | codacy-coverage",
    "coverage": "jest --coverage",
    "dc": "yarn dependency-check",
    "dependency-check": "dependency-check . --unused --no-dev && dependency-check . --missing --no-dev",
    "lint": "eslint --ext=ts .",
    "test": "jest --reporters=default",
    "test:watch": "jest --watch",
    "verify": "yarn lint && yarn build && yarn dc && jest --coverage --reporters=default",
    "watch": "yarn test:watch",
    "semantic-release": "semantic-release"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "iso-error": "^3.2.1",
    "type-plus": "^1.34.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@semantic-release/changelog": "^5.0.0",
    "@unional/devpkg-node": "^1.5.0",
    "assertron": "^7.1.2",
    "codacy-coverage": "^3.4.0",
    "codecov": "^3.6.5",
    "commitlint-circle": "^1.0.0",
    "husky": "^4.2.3",
    "jest-junit": "^10.0.0",
    "semantic-release": "^17.0.4"
  },
  "engines": {
    "node": ">= 10"
  }
}
