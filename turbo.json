{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        ":(glob)ts/**/*.ts",
        ":(glob)!ts/**/*.spec.ts"
      ],
      "outputs": [
        "cjs/**",
        "esm/**"
      ]
    },
    "clean": {
      "cache": false
    },
    "coverage": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        ":(glob)ts/**/*.ts"
      ],
      "outputs": [
        "coverage/**"
      ]
    },
    "depcheck": {
      "dependsOn": [
        "^build"
      ]
    },
    "dev": {
      "cache": false
    },
    "lint": {
      "dependsOn": [
        "^build"
      ]
    },
    "nuke": {
      "cache": false
    },
    "size": {
      "dependsOn": [
        "build"
      ]
    },
    "test": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        ":(glob)ts/**/*.ts"
      ]
    },
    "verify": {
      "dependsOn": ["lint", "build", "coverage", "depcheck", "size"]
    },
    "watch": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        ":(glob)ts/**/*.ts"
      ]
    }
  }
}
